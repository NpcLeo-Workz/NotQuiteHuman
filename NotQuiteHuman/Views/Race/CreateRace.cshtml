                <input asp-for="Int" class="form-control" />
                <span asp-validation-for="Int" class="text-danger"></span>

                <label asp-for="Wis" class="control-label">@Html.DisplayNameFor(model => this.Model.Wis)</label>
                <input asp-for="Wis" class="form-control" />
                <span asp-validation-for="Wis" class="text-danger"></span>

                <label asp-for="Cha" class="control-label">@Html.DisplayNameFor(model => this.Model.Cha)</label>
                <input asp-for="Cha" class="form-control" />
                <span asp-validation-for="Cha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Size" class="control-label">@Html.DisplayNameFor(model => this.Model.Size)</label>
                <input asp-for="Size" class="form-control" />
