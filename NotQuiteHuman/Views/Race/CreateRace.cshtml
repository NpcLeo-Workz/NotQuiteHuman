            </div>
        </div>
        <div class="col-4">
            <div class="form-group">
                <select asp-for="Language1Id" asp-items="Model.Languages">
                </select>
            </div>
            <div class="form-group">
                <select asp-for="Language2Id" asp-items="Model.Languages">
                </select>
            </div>
            <div class="form-group">
                <select asp-for="Language3Id" asp-items="Model.Languages">
                </select>
            </div>
            <div class="form-group">
                <select asp-for="SelectedTrait1Id" asp-items="Model.Traits">
                </select>               
            </div>
            <div class="form-group">
                <select asp-for="SelectedTrait2Id" asp-items="Model.Traits">
                </select>
            </div>
        </div>        
        </div>
        <div class="form-group ml-2">
            <input type="submit" value="Create" class="btn" />
            <a asp-action="Index" class="btn">Back</a>
        </div>
    </form>   
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
       

    }
    }

