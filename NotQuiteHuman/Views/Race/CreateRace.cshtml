            </div>
            <div class="form-group">
                <label asp-for="ClimbSpeed" class="control-label">@Html.DisplayNameFor(model => this.Model.ClimbSpeed)</label>
                <input asp-for="ClimbSpeed" class="form-control" />
                <span asp-validation-for="ClimbSpeed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreatureType" class="control-label">@Html.DisplayNameFor(model => this.Model.CreatureType)</label>
                <input asp-for="CreatureType" class="form-control" />
                <span asp-validation-for="CreatureType" class="text-danger"></span>
            </div>
           
        </div>
        <div class="row col-4">
             <div class="form-group">
                <label asp-for="Str" class="control-label">@Html.DisplayNameFor(model => this.Model.Str)</label>
