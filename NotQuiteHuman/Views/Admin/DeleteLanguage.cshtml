@model NotQuiteHuman.ViewModels.DeleteLanguageViewModel;
@{
    ViewData["Title"] = Model.Name;
}
<table>
    <tr>
        <td>@Html.DisplayNameFor(x=>this.Model.Id)</td>
        <td>@this.Model.Id</td>
    </tr>
    <tr>
        <td>@Html.DisplayNameFor(x=>this.Model.Name)</td>
        <td>@this.Model.Name</td>
    </tr>
    <tr>
        <td>@Html.DisplayNameFor(x=>this.Model.Type)</td>
        <td>@this.Model.Type</td>
    </tr>
    <tr>
        <td>@Html.DisplayNameFor(x=>this.Model.Description)</td>
        <td>@this.Model.Description</td>
    </tr>
</table>
<form class="mt-5" asp-action="DeleteLanguage">
    <div class="form-group">
        <input type="submit" value="Delete" class="btn"/>
        <a asp-action="Languages" class="btn" >Back</a>
    </div>
</form>