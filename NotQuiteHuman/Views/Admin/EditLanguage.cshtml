@model NotQuiteHuman.ViewModels.EditLanguageViewModel
@{
    ViewData["Title"] = "Edit Language";
}
<div class="row">
    <form asp-action="EditLanguage">
        <input type="hidden" asp-for="Id" />
        <div class="row">
            <div class="form-group">
                <label asp-for="Name" class="control-label">@Html.DisplayNameFor(model => this.Model.Name)</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label">@Html.DisplayNameFor(model => this.Model.Type)</label>
                <input asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">@Html.DisplayNameFor(model => this.Model.Description)</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group ml-2">
            <input type="submit" value="Edit" class="btn" />
            <a asp-action="Languages" class="btn">Back</a>
        </div>
    </form>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
